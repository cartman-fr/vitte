# Ultra++ : closures capturantes + compr√©hensions
def inc(x): return x + 1

def main():
  base = 10
  f = |x| x + base     # capture 'base'
  xs = [1,2,3,4]
  print(xs.map(f))     # [11,12,13,14]
  print([x*x for x in xs if x%2==0])  # [4,16]
  print([x+base for x in xs])         # [11,12,13,14]
main()
