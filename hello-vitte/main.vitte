//! hello-vitte/main.vitte
//! Démo minimaliste : affiche un message et gère un argument facultatif.

#![version("0.1.0")]
#![strict]

fn main(args: [str]) -> int {
    if args.len() > 1 {
        println("Bonjour, {} !", args[1]);
    } else {
        println("Bonjour, Vitte !");
    }
    return 0;
}
